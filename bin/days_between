#!/usr/bin/env ruby

require 'date'

def format_date(date)
  if date.match('/')
    month, day, year  = date.split('/')
    "#{year}-#{month}-#{day}"
  else
    date
  end
end

if ARGV.size == 2
  start_date = Date.parse(format_date(ARGV[0]))
  end_date   = Date.parse(format_date(ARGV[1]))
  days       = end_date - start_date

  puts "There are #{days.to_i} days between #{start_date} - #{end_date}"
else
  puts "start_date end_date"
end
